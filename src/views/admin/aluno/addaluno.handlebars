<div class="container_add_aluno">
    <h2> Novo Aluno: </h2>
    <div class="card_add_aluno">
        <div class="card_info_add_aluno">
            <form action="/rota_aluno/aluno/nova" method="POST">
                <div class="input_add_aluno">
                <label for="matricula">Matricula: </label>
                <input type="text" id="matricula" name="matricula" placeholder=""
                    class="form-control">
                <br>
                </div>

                <div class="input_add_aluno">
                <label for="nome">Nome: </label>
                <input type="text" id="nome" name="nome" placeholder="" class="form-control">
                <br>
                </div>

                  
                
                <div class="input_add_aluno">
                <label for="turma">Turma: </label>
                <select name="fk_turma" class="custom-select" id="turma">
                    {{#each turmas}}
                    <option value="{{id_turma}}">{{descricao}}</option>
                    {{else}}
                    <option value="0">Nenhuma turma registrada</option>
                    {{/each}}
                </select>  
                <br>
                <br>
                </div>
                </div>
                </div>
                <button type="submit" class="btn_add_novo_aluno">Criar Aluno</button>
            </form>
        </div>
    </div>
</div>